<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/homebg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        >

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/circle_img_user"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:civ_border_width="0.5dp"
            android:src="@drawable/guest"
            app:civ_border_color="@color/white"
            />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:id="@+id/txtvw_user_name"
            >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:id="@+id/txtvw_user_email"
            android:layout_marginBottom="10dp"
            >
        </TextView>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/curve_layout"
        android:layout_marginTop="160dp"
        >

        <!--User Features or Settings-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <!-- phone number layout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_phonenumber"
                    android:layout_marginTop="10dp"
                    android:background="?attr/selectableItemBackground"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lid1"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:textSize="16sp"
                            android:layout_marginLeft="18dp"
                            android:textColor="@color/black"
                            >
                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="9932722735"
                            android:textSize="16sp"
                            android:id="@+id/txtvw_show_user_number"
                            android:textAlignment="textEnd"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="8dp"
                            android:textColor="@color/black"
                            >
                        </TextView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/lid1"
                        android:background="@color/grey"
                        />
                </RelativeLayout>
                <!-- address layout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_address"
                    android:layout_below="@id/layout_phonenumber"
                    android:background="?attr/selectableItemBackground"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lid2"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textSize="16sp"
                            android:layout_marginLeft="18dp"
                            android:textColor="@color/black"
                            >
                        </TextView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/lid2"
                        android:background="@color/grey"
                        />
                </RelativeLayout>
                <!-- payment layout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_payment"
                    android:layout_below="@id/layout_address"
                    android:background="?attr/selectableItemBackground"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lid3"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payments"
                            android:textSize="16sp"
                            android:layout_marginLeft="18dp"
                            android:textColor="@color/black"
                            >
                        </TextView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/lid3"
                        android:background="@color/grey"
                        />
                </RelativeLayout>
                <!-- notification layout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_notification"
                    android:layout_below="@id/layout_payment"
                    android:background="?attr/selectableItemBackground"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lid4"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notification"
                            android:textSize="16sp"
                            android:layout_marginLeft="18dp"
                            android:textColor="@color/black"
                            >
                        </TextView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/lid4"
                        android:background="@color/grey"
                        />
                </RelativeLayout>
                <!-- support layout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_refferandearn"
                    android:layout_below="@id/layout_notification"
                    android:background="?attr/selectableItemBackground"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lid5"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reffer and Earn"
                            android:textSize="16sp"
                            android:layout_marginLeft="18dp"
                            android:textColor="@color/black"
                            >
                        </TextView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/lid5"
                        android:background="@color/grey"
                        />
                </RelativeLayout>
                <!-- share layout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_share"
                    android:layout_below="@id/layout_refferandearn"
                    android:background="?attr/selectableItemBackground"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:id="@+id/lid6"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:textSize="16sp"
                            android:layout_marginLeft="18dp"
                            android:textColor="@color/black"
                            >
                        </TextView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/lid6"
                        android:background="@color/grey"
                        />

                </RelativeLayout>
                <!-- terms layout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_terms"
                    android:layout_below="@id/layout_share"
                    android:background="?attr/selectableItemBackground"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/lid7"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terms &amp; Conditions"
                            android:textSize="16sp"
                            android:layout_marginLeft="18dp"
                            android:textColor="@color/black"
                            >
                        </TextView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/lid7"
                        android:background="@color/grey"
                        />

                </RelativeLayout>
                <!-- logout layout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_signout"
                    android:layout_below="@id/layout_terms"
                    android:layout_marginTop="4dp"
                    android:background="?attr/selectableItemBackground"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:id="@+id/lid8"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SignOut"
                            android:textSize="16sp"
                            android:layout_marginLeft="18dp"
                            android:textColor="@color/red"
                            >
                        </TextView>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>