<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/homebg"
    android:layout_height="match_parent"
    tools:context=".UI.NotificationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="55dp"
        >
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/offwhite"
        android:layout_marginTop="170dp"
        android:background="@drawable/curve_layout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your notification preference"
            android:textColor="@color/grey"
            android:layout_marginLeft="24dp"
            android:id="@+id/txtvw_notification"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            >
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtvw_notification"
            android:id="@+id/recyclervw_notification"
            android:layout_marginTop="12dp"
            >
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</RelativeLayout>